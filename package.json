{
  "name": "@iebh/reflib",
  "version": "2.1.2",
  "description": "Reference / Citation reference library utilities",
  "scripts": {
    "lint": "eslint lib modules shared test",
    "test": "mocha",
    "test:browser": "cd test/browser && npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IEBH/RefLib"
  },
  "keywords": [
    "reflib",
    "references",
    "citations",
    "library"
  ],
  "author": [
    "Matt Carter <m@ttcarter.com> (https://github.com/hash-bang)",
    "Connor Forbes <cforbes.software@gmail.com> (https://github.com/connorf25)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IEBH/RefLib/issues"
  },
  "homepage": "https://github.com/IEBH/RefLib",
  "enginesStrict": true,
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "type": "module",
  "exports": {
    ".": {
      "browser": "./lib/browser.js",
      "default": "./lib/default.js"
    },
    "./*": "./lib/*.js"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.53.0",
    "mocha": "^10.2.0",
    "mocha-logger": "^1.0.8",
    "temp": "^0.9.4",
    "vite-plugin-replace": "^0.1.1"
  },
  "dependencies": {
    "htmlparser2": "^9.0.0",
    "JSONStream": "^1.3.5",
    "mitt": "^3.0.1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "es2021": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 13,
      "sourceType": "module"
    }
  }
}
